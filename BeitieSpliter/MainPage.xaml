<Page
    x:Class="BeitieSpliter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BeitieSpliter"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    mc:Ignorable="d"
    RequestedTheme="Dark"
    Unloaded="Page_OnUnloaded" 
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="LeftFriendly" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style x:Key="LeftFriendlyBox" TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style x:Key="HorizontalFriendly" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        <Style x:Key="RadioFriendly" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14.66"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>


    <Grid x:Name="RootGrid" Grid.Row="5" Grid.ColumnSpan="2" Margin="10" BorderThickness="{ThemeResource SearchBoxThemePadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,20,0">
                <Button x:Name="ImportBtFile"  Width="200" Height="50" Margin="0,0,20,0" Content="Import Beitie File" FontSize="18" Click="OnImportBeitieFile"/>
                <Button x:Name="ImportBtDir" Width="230" Height="50" Content="Import Beitie Directory" FontSize="18" Click="OnImportBeitieDir"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center" Margin="0,0,10,0" Orientation="Horizontal" HorizontalAlignment="Stretch"  >
                <TextBox x:Name="FileDirPath" Visibility="Visible"  VerticalContentAlignment="Center"  IsSpellCheckEnabled="False"
                         MaxWidth="500" FontSize="18" VerticalAlignment="Stretch" />
            </StackPanel>
        </StackPanel>

        <Button Grid.Row="0" Grid.Column="1"  x:Name="SaveSplitImgs" HorizontalAlignment="Stretch"  Height="50" Content="Save Split Images" FontSize="18" Click="OnSaveSplitImages"/>
       
        
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock  Text="行数：" Margin="0,0,0,0" Style="{StaticResource LeftFriendly}" />
            <ComboBox  x:Name="RowCount" Margin="0,3,0,0"  SelectionChanged="RowCount_SelectionChanged"  
                       LostFocus="RowCount_LostFocus"
                       IsDropDownOpen="True" IsEditable="True" Width="70"/>
            <TextBlock  Text="列数：" Margin="10,0,0,0" Style="{StaticResource LeftFriendly}" />
            <ComboBox  x:Name="ColumnCount"  Margin="0,3,0,0" SelectionChanged="ColumnCount_SelectionChanged"  
                       LostFocus="ColumnCount_LostFocus"
                       IsDropDownOpen="True" IsEditable="True" Width="70" />
            <TextBlock  Text="裁边：" Margin="10,0,0,0" Style="{StaticResource LeftFriendly}" />
            <TextBox  x:Name="PageMarginsBox" Text="1,1,1,1" TextChanged="PageMargin_TextChanged" 
                      LostFocus="PageMargin_LostFocus"
                      Width="130" FontSize="14" Style="{StaticResource LeftFriendlyBox}" />
            <TextBlock  Text="画笔颜色：" Margin="5,0,5,0" Style="{StaticResource LeftFriendly}" />
            
            <ComboBox  x:Name="PenColorCombo" ItemsSource="{x:Bind ColorBoxItems}" 
                       SelectedValuePath="Value" DisplayMemberPath="Text"
                       SelectedItem="{x:Bind ColorBoxSelectedItem, Mode=TwoWay}"
                       SelectionChanged="PenColor_SelectionChanged"  IsDropDownOpen="True" 
                        Width="70" />
            <TextBlock  Text="画笔宽度：" Margin="20,0,5,0" Style="{StaticResource LeftFriendly}" />
            <TextBox  x:Name="PenWidthBox" 
                      LostFocus="PenWidthBox_LostFocus"
                      TextChanged="PenWidthBox_TextChanged" Text="1" Width="70" Style="{StaticResource LeftFriendlyBox}" InputScope="Number"  />

        </StackPanel>

        <Border x:Name="PageBorder" Grid.Row="2" Grid.RowSpan="3" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="3">
            <ScrollViewer x:Name="ImageScrollViewer"  HorizontalScrollBarVisibility="Visible"  VerticalScrollBarVisibility="Visible"
                    ZoomMode="Enabled">

                <canvas:CanvasControl Draw="CurrentPage_OnDraw" 
                                      x:Name="CurrentPage" ClearColor="Gray" />

                <!--<Canvas Name="CurrentPage" RenderTransformOrigin="0.5,0.5"/>-->
                <!--<Image x:Name="CurrentPage" HorizontalAlignment="Center"  VerticalAlignment="Center" Source="/Assets/SplashScreen.png"/>-->
            </ScrollViewer>
        </Border>
        <TextBox x:Name="TieAlbum" Grid.Row="2" Grid.Column="1" Margin="3" FontSize="14" 
                 PlaceholderText="输入帖的名称" MinWidth="50"  MaxWidth="200"  IsSpellCheckEnabled="False" HorizontalAlignment="Left" 
                 Text="董美人墓志"
                 VerticalAlignment="Center"/>
        <TextBox x:Name="PageText" PlaceholderText="在这里输入释文" Grid.Row="3" FontSize="18" Grid.Column="1" LostFocus="PageText_LostFocus" AcceptsReturn="True" 
                     Text="美人董氏墓志铭{印}{印}，美人姓董，汴州恤宜县人也。祖佛子，齐凉州刺史，敦仁愽洽，标誉乡闾。父后进，俶傥英雄，声驰河渷。美人体质闲华，天" VerticalAlignment="Stretch" Margin="3" TextAlignment="DetectFromContent" TextWrapping="Wrap" IsSpellCheckEnabled="False"
                 />
        <TextBlock x:Name="TextParsedData" Grid.Row="4" Grid.Column="1" Text="" FontSize="12" VerticalAlignment="Stretch" Margin="3" TextAlignment="DetectFromContent" TextWrapping="Wrap"/>

    </Grid>
</Page>
